{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDirs": [".", "./.react-router/types"],
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "Bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom", "DOM.Iterable"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@veraclins-dev/editor": ["packages/editor/src/index.ts"],
      "@veraclins-dev/form": ["packages/form/src/index.ts"],
      "@veraclins-dev/image": ["packages/image/src/index.ts"],
      "@veraclins-dev/image/server": ["packages/image/src/server.ts"],
      "@veraclins-dev/react-utils": ["packages/react-utils/src/index.ts"],
      "@veraclins-dev/react-utils/server": [
        "packages/react-utils/src/server.ts"
      ],
      "@veraclins-dev/remix-auth-social": [
        "packages/remix-auth-social/src/index.ts"
      ],
      "@veraclins-dev/remix-seo": ["packages/remix-seo/src/index.ts"],
      "@veraclins-dev/ui": ["packages/ui/src/index.ts"],
      "@veraclins-dev/ui/*": ["packages/ui/src/*"],
      "@veraclins-dev/utils": ["packages/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
